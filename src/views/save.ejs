<body class="bg-gray-50 text-gray-800">
  <div class="max-w-4xl mx-auto py-10 px-6">
    <h1 class="text-3xl font-semibold mb-6 text-indigo-700">ðŸª¶ Saved Lists</h1>

    <% savedLists.forEach(list => { %>
      <div class="bg-white shadow-md rounded-lg p-4 mb-6 border border-indigo-100">
        <div class="flex justify-between items-center mb-2">
          <h2 class="text-xl font-bold text-gray-900"><%= list.description %></h2>
          <span class="text-sm text-gray-500">Created: <%= list.createdAt %></span>
        </div>

        <div class="text-sm text-gray-600 mb-2">
          List ID: <%= list.id %> | Update Ident: <%= list.updateIdent %>
        </div>

        <div class="text-sm text-gray-700">
          Image IDs:
          <% try { %>
            <% const ids = JSON.parse(list.imageIds); %>
            <% ids.forEach(id => { %>
              <span class="inline-block bg-indigo-100 text-indigo-800 px-2 py-1 rounded mr-1 mb-1"><%= id %></span>
            <% }) %>
          <% } catch (e) { %>
            <span class="text-red-500">Invalid JSON</span>
          <% } %>
        </div>
      </div>
    <% }) %>
  </div>
</body>
</html>
