<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />  
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Veiltrace Upload</title>
  <link rel="icon" type="image/x-icon" href="/favicon.ico">
  <script src="/assets/tailwind.js"></script>
</head>
<body class="bg-gray-50 text-gray-900">

  <div class="max-w-7xl mx-auto pt-6 pb-2 px-6">
    <!-- Header -->
    <header class="mb-4 text-center cursor-pointer" onclick="location.reload()">
      <h1 class="text-3xl font-serif font-semibold tracking-tight">Veiltrace Upload</h1>
    </header>

    <!-- Main Content -->
    <main class="w-full flex justify-center mt-4">

      <div class="w-full flex justify-center mt-12">
        <form id="uploadForm" action="/upload" method="POST" enctype="multipart/form-data"
              class="bg-white border border-gray-300 p-6 rounded-lg shadow-md w-full max-w-md space-y-4">
      
          <label for="fileInput" class="block text-gray-700 font-semibold mb-2">Upload Images</label>
      
          <div id="dropZone"
               class="flex items-center justify-center border-2 border-dashed border-blue-400 rounded-lg p-12 text-gray-700 text-sm cursor-pointer hover:bg-blue-50 transition">
            Drag & drop images here or click to select
          </div>
      
          <input id="fileInput" type="file" name="images" multiple accept="image/*"
                 class="hidden" />
      
          <div id="fileList" class="text-gray-900 text-sm mt-2"></div>
      
          <button type="submit"
                  class="w-full bg-cyan-600 hover:bg-cyan-700 text-white font-semibold py-2 px-4 rounded transition">
            Upload
          </button>
          
          <div id='message' class="text-black font-medium mb-4"><%= message %></div>
          
        </form>

      </div>
      
      <script>
        const dropZone = document.getElementById('dropZone');
        const fileInput = document.getElementById('fileInput');
        const fileList = document.getElementById('fileList');
        const uploadForm = document.getElementById('uploadForm');
      
        dropZone.addEventListener('click', () => fileInput.click());
      
        dropZone.addEventListener('dragover', (e) => {
          e.preventDefault();
          dropZone.classList.add('bg-blue-100');
        });
      
        dropZone.addEventListener('dragleave', () => {
          dropZone.classList.remove('bg-blue-100');
        });
      
        dropZone.addEventListener('drop', (e) => {
          e.preventDefault();
          dropZone.classList.remove('bg-blue-100');
          fileInput.files = e.dataTransfer.files;
          updateFileList();
        });
      
        fileInput.addEventListener('change', updateFileList);
      
        function updateFileList() {
          const files = fileInput.files;
          fileList.innerHTML = '';
          for (let i = 0; i < files.length; i++) {
            const item = document.createElement('div');
            item.textContent = `• ${files[i].name}`;
            fileList.appendChild(item);
          }
        }
      
        // uploadForm.addEventListener('submit', (e) => {
        //   if (!fileInput.files || fileInput.files.length === 0) {
        //     e.preventDefault();
        //     alert('Please select at least one image before uploading.');
        //   }
        // });
        uploadForm.addEventListener('submit', (e) => {
            const messageBox = document.getElementById('message');
            messageBox.textContent = ''; // Clear previous message

            if (!fileInput.files || fileInput.files.length === 0) {
              e.preventDefault();
              messageBox.textContent = 'Please select at least one image before uploading.';
              messageBox.classList.add('text-red-600');
            } else {
              messageBox.classList.remove('text-red-600');
            }
          });
      </script>

    </main>

  </div>  

  <div class="flex justify-center items-center h-6 mt-12">
    <button onclick="window.close()"
            class="inline-block px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600 transition cursor-pointer">
      Close
    </button>
  </div>

  <!-- Copilot Credit -->
  <footer class="m-4 text-center text-sm text-gray-700">
      <p>
      Crafted in quiet partnership with  
      <a href="https://copilot.microsoft.com" target="_blank" class="text-blue-600 font-semibold hover:underline">
          Microsoft Copilot
      </a> — <br />your poetic companion in code, ritual, and breath. Veiltrace. All traces remembered.
      </p>
  </footer>

</body>
</html>
