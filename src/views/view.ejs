<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Veiltrace Image</title>
    <link rel="icon" type="image/x-icon" href="/favicon.ico">
    <script src="/assets/tailwind.js"></script>
  </head>
  <body class="bg-gray-50 text-gray-900">

    <div class="max-w-7xl mx-auto pt-6 pb-2 px-6">
      <!-- Header -->
      <header class="mb-4 text-center cursor-pointer" onclick="location.reload()">
        <h1 class="text-3xl font-serif font-semibold tracking-tight">Veiltrace Image</h1>
      </header>
  
      <!-- Main Content -->
      <main class="max-w-3xl mx-auto px-4 py-0 space-y-2">
  
        <!-- Image Display Section -->
        <section class="text-center">
          <div id="image-container" class="overflow-hidden relative inline-block w-full max-w-4xl mx-auto">
            <img id="veiltrace-image"
                src="/api/v1/image/view/<%= id %>"
                alt="Veiltrace Image"
                class="rounded-lg shadow max-w-full h-auto transition-transform duration-300 select-none"
                draggable="false">
          </div>

          <div class="mt-4 flex flex-col items-center space-y-3">
            <div class="flex items-center space-x-2">
              <input type="range" id="zoom-slider" min="100" max="500" value="100" class="w-64">
              <span id="zoom-percent" class="text-sm text-gray-600">Zoom: 100%</span>
            </div>

            <div class="flex space-x-4">
              <button id="rotate-btn"
                      class="px-4 py-1 text-sm bg-gray-700 text-white rounded hover:bg-gray-800 transition">
                Rotate
              </button>
              <a href="/api/v1/image/view/<%= id %>" download="<%= imageName %>"
                class="px-4 py-1 text-sm bg-gray-700 text-white rounded hover:bg-gray-800 transition">
                Download
              </a>
            </div>
          </div>
        </section>

        <script type="text/javascript">
          // ðŸŒŒ DOM references to key elements in the viewer
          const image = document.getElementById('veiltrace-image');       // The image to be transformed
          const container = document.getElementById('image-container');   // The bounding container for the image
          const slider = document.getElementById('zoom-slider');          // Zoom control slider
          const zoomText = document.getElementById('zoom-percent');       // Text display for zoom percentage
        
          // ðŸ§  State variables for transformation and interaction
          let scale = 1;               // Current zoom scale (1 = 100%)
          let rotation = 0;            // Current rotation angle in degrees
          let isDragging = false;      // Whether the image is currently being dragged
          let startX, startY;          // Mouse starting position for drag
          let currentX = 0, currentY = 0; // Current translation offsets
        
          // ðŸ”„ Apply rotation, scale, and translation to the image
          function updateTransform() {
            image.style.transform = `rotate(${rotation}deg) scale(${scale}) translate(${currentX}px, ${currentY}px)`;
            image.style.cursor = scale > 1 ? (isDragging ? 'grabbing' : 'grab') : 'default'; // Cursor changes based on zoom and drag state
          }
        
          // ðŸ§± Clamp translation so image stays within container bounds
          function clampTranslation() {
            const containerRect = container.getBoundingClientRect();       // Get container dimensions
            const isRotated = rotation % 180 !== 0;                        // Check if image is rotated 90 or 270 degrees
        
            // Calculate scaled dimensions based on rotation
            const scaledWidth = (isRotated ? image.naturalHeight : image.naturalWidth) * scale;
            const scaledHeight = (isRotated ? image.naturalWidth : image.naturalHeight) * scale;
        
            const containerWidth = containerRect.width;
            const containerHeight = containerRect.height;
        
            // Calculate max allowed translation in each direction
            // const maxX = Math.max(0, (scaledWidth - containerWidth) / 2);
            // const maxY = Math.max(0, (scaledHeight - containerHeight) / 2);
            const maxX = Math.max(0, (scaledWidth - containerWidth) / 4);
            const maxY = Math.max(0, (scaledHeight - containerHeight) / 4);
        
            // Clamp current translation to within bounds
            currentX = Math.min(maxX, Math.max(-maxX, currentX));
            currentY = Math.min(maxY, Math.max(-maxY, currentY));
          }
        
          // ðŸ” Zoom slider interaction
          slider.addEventListener('input', () => {
            scale = slider.value / 100;                        // Convert slider value to scale
            zoomText.textContent = `Zoom: ${slider.value}%`;   // Update zoom display
            currentX = 0;                                       // Reset translation
            currentY = 0;
            updateTransform();                                 // Apply new transform
          });
        
          // ðŸ–±ï¸ Mouse wheel zoom interaction
          // image.addEventListener('wheel', (e) => {
          //   const delta = e.deltaY;                            // Scroll direction
          //   const newScale = scale + delta * -0.001;           // Adjust scale based on scroll
        
          //   // Prevent zooming beyond limits
          //   if ((delta < 0 && scale >= 5) || (delta > 0 && scale <= 1)) return;
        
          //   e.preventDefault();                                // Prevent page scroll
          //   scale = Math.max(1, Math.min(newScale, 5));        // Clamp scale between 1 and 5
          //   slider.value = Math.round(scale * 100);            // Sync slider
          //   zoomText.textContent = `Zoom: ${slider.value}%`;   // Update zoom display
          //   currentX = 0;                                       // Reset translation
          //   currentY = 0;
          //   updateTransform();                                 // Apply new transform
          // });
        
          // ðŸ”„ Rotate image 90Â° clockwise on button click
          document.getElementById('rotate-btn').addEventListener('click', () => {
            rotation = (rotation + 90) % 360;                  // Rotate in 90Â° increments
            currentX = 0;                                       // Reset translation
            currentY = 0;
            updateTransform();                                 // Apply new transform
          });
        
          // ðŸ–ï¸ Begin dragging image on mouse down
          image.addEventListener('mousedown', (e) => {
            if (scale > 1) {                                   // Only allow drag when zoomed in
              isDragging = true;
              startX = e.clientX;                              // Record starting mouse position
              startY = e.clientY;
              image.style.cursor = 'grabbing';                 // Change cursor
              image.style.transition = 'none';                 // Disable smooth transition during drag
            }
          });
        
          // ðŸ–ï¸ End dragging on mouse up
          document.addEventListener('mouseup', () => {
            isDragging = false;
            image.style.cursor = scale > 1 ? 'grab' : 'default'; // Restore cursor
            image.style.transition = 'transform 0.3s';           // Re-enable smooth transition
          });
        
          // ðŸ–ï¸ Handle drag movement
          document.addEventListener('mousemove', (e) => {
            if (!isDragging) return;
        
            const dx = e.clientX - startX;                     // Horizontal movement
            const dy = e.clientY - startY;                     // Vertical movement
        
            let rotatedX = dx;
            let rotatedY = dy;
        
            // Adjust movement based on current rotation
            switch (rotation % 360) {
              case 90:
                rotatedX = dy;
                rotatedY = -dx;
                break;
              case 180:
                rotatedX = -dx;
                rotatedY = -dy;
                break;
              case 270:
                rotatedX = -dy;
                rotatedY = dx;
                break;
            }
        
            currentX += rotatedX;                              // Update translation
            currentY += rotatedY;
            startX = e.clientX;                                // Update starting position
            startY = e.clientY;
        
            clampTranslation();                                // Keep image within bounds
            updateTransform();                                 // Apply new transform
          });
        </script>

        <!-- Metadata -->
        <section class="bg-white rounded-lg shadow p-2 space-y-1 text-md">
          <h2 class="text-lg font-semibold text-black mb-2">Image Details</h2>

          <div><span class="font-medium text-gray-900">Id:</span> <%= id %></div>
          <div><span class="font-medium text-gray-900">Name:</span> <%= imageName %></div>
          <div><span class="font-medium text-gray-900">Format:</span> <%= fileFormat %></div>
          <div><span class="font-medium text-gray-900">Size:</span> <%= fileSize %> KB</div>
          <div><span class="font-medium text-gray-900">Path:</span> <%= fullPath %></div>

          <div><span class="font-medium text-gray-900">Meta:</span> <br /><%- meta.replace(/\n/g, "<br />")
            %></div>
          <div><span class="font-medium text-gray-900">Description:</span> <br /><%- description.replace(/\n/g, "<br />")
            %></div>

          <div><span class="font-medium text-gray-900">Visited:</span> <%= visited %></div>
          <div><span class="font-medium text-gray-900">Updated At:</span> <%= updatedAt || 'â€”' %></div>
          <div><span class="font-medium text-gray-900">Indexed At:</span> <%= indexedAt %></div>
          <div><span class="font-medium text-gray-900">Created At:</span> <%= createdAt %></div>

        </section>
  
        <!-- Vistas -->
        <section class="bg-white rounded-lg shadow p-2 space-y-1 text-sm">
          <h2 class="text-lg font-semibold text-black mb-2">Vista Trace</h2>

          <ul class="list-none space-y-1 text-sm text-gray-900">
            <% vistas.forEach((vista, index) => { %>
              <li>
                <strong>
                  <%= vistas.length - index %>
                </strong> . 
                <%= vista.type.charAt(0).toUpperCase() + vista.type.slice(1) %> â€” <%= vista.createdAt %>
              </li>
            <% }) %>
          </ul>
        </section>
  
        <!-- Archives -->
        <section class="bg-white rounded-lg shadow p-2 space-y-1 text-sm">
          <h2 class="text-lg font-semibold text-black mb-2">Archive Trace</h2>

          <ul class="list-none space-y-1 text-sm text-gray-900">
            <% archives.forEach((archive, index) => { %>
              <li>
                <strong><%= index + 1 %></strong> .
                <a href="/archive/<%= archive.id %>" target="_blank"
                   class="text-blue-600 underline hover:text-blue-800 transition">
                  <%= archive.title %> â€” <%= archive.createdAt %>
                </a>
              </li>
            <% }) %>
          </ul>
        </section>

      </main>
    </div>

