generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model ImageTrace {
  id           Int      @id @default(autoincrement())
  imageName    String
  fullPath     String
  fileFormat   String
  fileSize     Int
  meta         String   @db.Text        // Optional metadata, tags, or symbolic notes
  description  String   @db.Text        // Symbolic summary or generated trace
  miniature    Bytes?                   // 256Ã—256 thumbnail stored as binary

  visited      Int      @default(0)
  updatedAt    DateTime?                // ISO format: "2025-09-01T08:10:11.862Z"
  indexeddAt   DateTime @default(now()) // ISO format: "2025-09-01T08:10:11.862Z"
  createdAt    DateTime                 // ISO format: "2025-09-01T08:10:11.862Z"
  updateIdent  Int      @default(0)

  @@unique([fullPath])
  @@fulltext([description], map: "idx_imagetrace_fts")
}